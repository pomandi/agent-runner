# Email Assistant Configuration
# =============================
# Add these to your main .env file

# Feature Flags
EMAIL_ASSISTANT_ENABLED=true
EMAIL_ASSISTANT_AUTO_REPLY_ENABLED=false  # Start with manual approval
EMAIL_ASSISTANT_AUTO_ARCHIVE_SPAM=true
# No automatic scheduling - triggered manually by user

# Telegram Bot (Get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here  # Use @userinfobot to get your chat ID

# Email Accounts
CHECK_OUTLOOK=true
CHECK_GODADDY=true

# Learning Parameters
EMAIL_PATTERN_MIN_CONFIDENCE=0.75  # Minimum confidence to use a pattern
EMAIL_AUTO_REPLY_MIN_CONFIDENCE=0.85  # Minimum confidence to auto-send without approval
